<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mi.learn.com">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="mi.email.activity.Welcome"
            android:label="@string/welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mi.email.activity.MailDetails"
            android:label="@string/mail_details"></activity>
        <activity
            android:name="mi.email.activity.ReceiveList"
            android:label="@string/receivelist"></activity>
        <activity
            android:name="mi.email.activity.SendMail"
            android:label="@string/send_email"></activity>
        <!-- <activity android:name="mi.email.core.ReadDatabase"></activity> -->
        <!-- <activity android:name="mi.email.core.WriteDatabase"></activity> -->
        <activity
            android:name="mi.email.activity.ReceiveAndSend"
            android:label="@string/mail_details"></activity>
    </application>

</manifest>